@model IEnumerable<ThinkSmartSchools.Models.School>

@{
    ViewData["Title"] = "Index";
}

<script type="text/javascript" language="javascript">
    $(function () {
        var myEl = document.getElementsByName('aUpdate');
        $(myEl).click(function (e) {

            e.preventDefault();
            var _this = $(this);
            $.get(_this.attr("href"), function (res) {
                $('#' + _this.data("target")).html(res);
            });

        });

    });
</script>

<br />

<p>
    <a asp-action="Create" data-target="divConfig" name="aUpdate" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Logo)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Logo)
            </td>
            <td>
                <a asp-action="Edit" data-target="divConfig" name="aUpdate" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" data-target="divConfig" name="aUpdate" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" data-target="divConfig" name="aUpdate" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
